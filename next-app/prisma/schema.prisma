generator client {
  provider   = "prisma-client-js"
  engineType = "wasm"
}

// binaryTargets = ["native"]

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id      String  @id @default(uuid())
  text    String
  done    Boolean @default(false)
  content String  @default("")
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String
  passwordHash String
}

model Role {
  id    String @id @default(uuid())
  name  String
  color String
}
